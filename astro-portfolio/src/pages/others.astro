---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---
<BaseLayout title="其他 | 李卓衡" description="Others - Photos and more" showSidebar={false}>
  <h1 class="page-title" data-i18n="sectionOthers">其他</h1>
  <p class="others-intro content-zh">此处可添加照片等内容。</p>
  <p class="others-intro content-en">Add photos and more content here.</p>
  <p class="page-footer"><a href={base}>← <span data-i18n="navHome">首页</span></a></p>
</BaseLayout>

<style>
  .page-title { font-family: var(--font-serif); font-size: 1.5rem; font-weight: 600; margin: 0 0 1.5rem; }
  .others-intro { color: var(--muted); font-size: 0.95rem; margin: 0 0 1rem; }
  .page-footer { margin-top: 2rem; font-size: 0.9rem; color: var(--muted); }
</style>
