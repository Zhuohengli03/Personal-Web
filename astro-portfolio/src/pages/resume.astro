---
import BaseLayout from '../layouts/BaseLayout.astro';

// Place your resume PDF at public/resume.pdf; the embed and link will use it.
const resumePath = '/resume.pdf';
---
<BaseLayout title="李卓衡 | 简历" description="Zhuoheng Li — Resume (PDF) download and view.">
  <h1 data-i18n="navResume">简历</h1>
  <p class="intro">
    <a href={resumePath} download><span class="content-zh">下载 PDF</span><span class="content-en">Download PDF</span></a>
    <span class="content-zh"> · 下方预览或新标签打开</span>
    <span class="content-en"> · View below or open in a new tab</span>
  </p>
  <div class="embed-wrap">
    <iframe
      title="Resume (PDF)"
      src={`${resumePath}#view=FitH`}
      class="pdf-embed"
      width="100%"
      height="720"
    />
  </div>
  <p class="fallback">
    <span class="content-zh">若无法加载，请</span><span class="content-en">If the PDF doesn’t load, </span>
    <a href={resumePath} target="_blank" rel="noopener"><span class="content-zh">在新标签页打开</span><span class="content-en">open it in a new tab</span></a><span class="content-zh">。</span><span class="content-en">.</span>
  </p>
</BaseLayout>

<style>
  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
  }
  .intro {
    color: var(--muted);
    margin: 0 0 1rem;
    font-size: 0.95rem;
  }
  .embed-wrap {
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--surface);
  }
  .pdf-embed {
    display: block;
    border: none;
  }
  .fallback {
    margin: 1rem 0 0;
    font-size: 0.9rem;
    color: var(--muted);
  }
</style>
