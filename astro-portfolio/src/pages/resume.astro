---
import BaseLayout from '../layouts/BaseLayout.astro';

// Place your resume PDF at public/resume.pdf; the embed and link will use it.
const resumePath = '/resume.pdf';
---
<BaseLayout title="Resume" description="Download or view my resume (PDF).">
  <h1>Resume</h1>
  <p class="intro">
    <a href={resumePath} download>Download PDF</a>
    {` · `}
    View below or open in a new tab.
  </p>
  <div class="embed-wrap">
    <iframe
      title="Resume (PDF)"
      src={`${resumePath}#view=FitH`}
      class="pdf-embed"
      width="100%"
      height="720"
    />
  </div>
  <p class="fallback">
    If the PDF doesn’t load, <a href={resumePath} target="_blank" rel="noopener">open it in a new tab</a>.
  </p>
</BaseLayout>

<style>
  h1 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
  }
  .intro {
    color: var(--muted);
    margin: 0 0 1rem;
    font-size: 0.95rem;
  }
  .embed-wrap {
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    background: var(--surface);
  }
  .pdf-embed {
    display: block;
    border: none;
  }
  .fallback {
    margin: 1rem 0 0;
    font-size: 0.9rem;
    color: var(--muted);
  }
</style>
