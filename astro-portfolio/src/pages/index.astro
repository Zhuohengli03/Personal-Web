  .hero-tagline { font-size: 1rem; color: var(--muted); max-width: 540px; margin: 0 auto 1.25rem; line-height: 1.5; }
  .hero-meta { display: flex; flex-direction: column; align-items: center; gap: 0.25rem; font-size: 0.9rem; color: var(--muted); margin-bottom: 1.5rem; }
  .hero-meta-row { margin: 0; display: flex; flex-wrap: wrap; justify-content: center; gap: 0.5rem 1.25rem; }
  .hero-meta-location { display: block; }
  .hero-meta-links { display: flex; gap: 1.25rem; }
  .hero-meta a:hover { text-decoration: none; color: var(--accent); }
  .hero-cta { display: flex; gap: 0.75rem; flex-wrap: wrap; justify-content: center; }
  .btn { display: inline-block; padding: 0.6rem 1.25rem; font-size: 0.95rem; font-weight: 600; border-radius: var(--radius); transition: opacity 0.2s; }
  .btn:hover { text-decoration: none; opacity: 0.9; }
  .btn-primary { background: var(--accent); color: #fff; }
  .btn-outline { border: 1px solid var(--border); color: var(--text); }
  .btn-outline:hover { border-color: var(--muted); color: var(--text); }

  .section-title { font-family: var(--font-serif); font-size: 1.25rem; font-weight: 600; margin: 2rem 0 1rem; }
  .home-about .about-content p { margin: 0 0 0.75rem; color: var(--muted); font-size: 0.95rem; }
  .skills-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 0.5rem; }
  .skill-category { background: var(--surface); border: 1px solid var(--border); border-radius: var(--radius); padding: 1rem; }
  .skill-category h3 { font-size: 1rem; font-weight: 600; margin: 0 0 0.5rem; }
  .skill-category p { margin: 0; font-size: 0.9rem; color: var(--muted); line-height: 1.5; }
  .edu-card-viewmore { padding: 0; border: none; }
  .edu-card-viewmore a { font-weight: 500; }

  .hero-welcome {
    text-align: center;
    padding: 1.5rem 0 1rem;
    margin-bottom: 0.5rem;
  }
  .welcome-text {
    font-family: "Dancing Script", "ZCOOL XiaoWei", "Noto Serif SC", cursive;
    font-size: clamp(2rem, 8vw, 3.5rem);
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: var(--text);
    letter-spacing: 0.02em;
