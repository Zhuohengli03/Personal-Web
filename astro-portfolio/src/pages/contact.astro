---
import BaseLayout from '../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---
<BaseLayout title="联系 | 李卓衡" description="Contact Zhuoheng Li">
  <h1 class="page-title" data-i18n="sectionContact">联系我</h1>
  <p class="contact-intro" data-i18n="contactIntro">欢迎通过以下方式与我交流：</p>
  <ul class="contact-links">
    <li><a href="mailto:zhuohengli03@gmail.com">zhuohengli03@gmail.com</a></li>
    <li><a href="https://github.com/Zhuohengli03" target="_blank" rel="noopener noreferrer">GitHub</a></li>
    <li><a href="https://www.linkedin.com/in/zhuoheng-li-3365b5351/" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
  </ul>
  <p class="page-footer"><a href={base}>← <span data-i18n="navHome">首页</span></a></p>
</BaseLayout>

<style>
  .page-title { font-family: var(--font-serif); font-size: 1.5rem; font-weight: 600; margin: 0 0 1.5rem; }
  .contact-intro { color: var(--muted); margin: 0 0 1rem; font-size: 0.95rem; }
  .contact-links { list-style: none; margin: 0; padding: 0; display: flex; flex-wrap: wrap; gap: 1rem; }
  .contact-links a { font-weight: 500; }
  .page-footer { margin-top: 2rem; font-size: 0.9rem; color: var(--muted); }
</style>
