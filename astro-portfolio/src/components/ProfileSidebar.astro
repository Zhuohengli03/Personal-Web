<style>
  .profile-sidebar {
    flex-shrink: 0;
    width: 240px;
    padding: 1rem;
    position: sticky;
    top: 50%;
    transform: translateY(-50%);
    align-self: flex-start;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--muted);
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    border-radius: var(--radius);
    box-shadow: var(--glass-shadow);
    max-height: calc(100vh - 120px);
    overflow-y: auto;
  }
  .profile-avatar {
    width: 96px;
    height: 96px;
    border-radius: 50%;
    overflow: hidden;
    background: rgba(22, 27, 34, 0.35);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 2px solid var(--glass-border);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12), inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }
  .profile-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .profile-avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-serif);
    font-size: 2rem;
    font-weight: 600;
    color: var(--accent);
  }
  .profile-name {
    font-family: var(--font-serif);
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    margin: 0;
    text-shadow: 0 0 16px rgba(88, 166, 255, 0.25);
    letter-spacing: 0.02em;
  }
  .profile-location {
    margin: 0;
    font-size: 0.85rem;
  }
  .profile-status {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.15rem;
  }
  .profile-student {
    margin: 0;
    font-size: 0.85rem;
    color: var(--accent);
    font-weight: 500;
  }
  .profile-program {
    margin: 0;
    font-size: 0.8rem;
    color: var(--muted);
  }
  .profile-cta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
    margin-top: 0.25rem;
  }
  .profile-btn {
    display: block;
    text-align: center;
    padding: 0.5rem 0.75rem;
    font-size: 0.85rem;
    font-weight: 600;
    border-radius: var(--radius);
    text-decoration: none;
    transition: color 0.2s, border-color 0.2s, box-shadow 0.2s;
    position: relative;
    overflow: hidden;
  }
  .profile-btn:hover {
    text-decoration: none;
  }
  /* Interactive hover: æ¸å˜å…‰æ–‘è·Ÿéšé¼ æ ‡ */
  .profile-btn-interactive::before {
    content: "";
    position: absolute;
    left: var(--btn-x, 50%);
    top: var(--btn-y, 50%);
    width: 120%;
    height: 120%;
    transform: translate(-50%, -50%);
    background: radial-gradient(
      circle at center,
      rgba(255, 255, 255, 0.25) 0%,
      rgba(255, 255, 255, 0.08) 25%,
      transparent 55%
    );
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s;
  }
  .profile-btn-interactive:hover::before {
    opacity: 1;
  }
  .profile-btn-primary {
    background: var(--accent);
    color: #fff;
    border: 1px solid transparent;
  }
  .profile-btn-primary:hover {
    box-shadow: 0 0 20px rgba(88, 166, 255, 0.35);
  }
  .profile-btn-outline {
    border: 1px solid var(--glass-border);
    color: var(--text);
    background: rgba(22, 27, 34, 0.6);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }
  .profile-btn-outline:hover {
    border-color: var(--muted);
    color: var(--text);
    box-shadow: 0 0 16px rgba(255, 255, 255, 0.06);
  }
  @media (max-width: 991px) {
    .profile-sidebar {
      display: none;
    }
  }
</style>

<script>
  document.querySelectorAll('.profile-btn-interactive').forEach((btn) => {
    btn.addEventListener('mousemove', (e) => {
      const rect = btn.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      btn.style.setProperty('--btn-x', x + '%');
      btn.style.setProperty('--btn-y', y + '%');
    });
  });
</script>
