---
interface Props {
  class?: string;
  color?: string;
}
const { class: className = '', color = 'rgba(88, 166, 255, 0.4)' } = Astro.props;
---
<div class:list={['magic-shine-border', className]} style={`--shine-color: ${color}`}>
  <div class="magic-shine-border-gradient" aria-hidden="true" />
  <slot />
</div>

<style>
  .magic-shine-border {
    position: relative;
    overflow: hidden;
    border-radius: inherit;
  }
  .magic-shine-border-gradient {
    position: absolute;
    inset: -100%;
    background: conic-gradient(
      from 0deg at 50% 50%,
      transparent 0deg,
      var(--shine-color, rgba(88, 166, 255, 0.3)) 60deg,
      transparent 120deg
    );
    animation: magic-shine-spin 3s linear infinite;
    pointer-events: none;
  }
  @keyframes magic-shine-spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>
