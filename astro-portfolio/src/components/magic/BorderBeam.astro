---
interface Props {
  class?: string;
  size?: number;
  duration?: number;
}
const { class: className = '', size = 200, duration = 6 } = Astro.props;
---
<div class:list={['magic-border-beam', className]}>
  <div class="magic-border-beam-inner" style={`--beam-size: ${size}px; --beam-duration: ${duration}s`} aria-hidden="true" />
  <slot />
</div>

<style>
  .magic-border-beam {
    position: relative;
    overflow: hidden;
    border-radius: inherit;
  }
  .magic-border-beam-inner {
    position: absolute;
    inset: -2px;
    border-radius: inherit;
    padding: 2px;
    background: conic-gradient(
      from 0deg,
      transparent 0deg 90deg,
      #58a6ff 120deg,
      #a78bfa 180deg,
      #f472b6 240deg,
      #58a6ff 300deg,
      transparent 330deg
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: magic-beam-rotate var(--beam-duration, 6s) linear infinite;
    pointer-events: none;
  }
  @keyframes magic-beam-rotate {
    to {
      transform: rotate(360deg);
    }
  }
</style>
