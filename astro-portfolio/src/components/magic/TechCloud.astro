---
/**
 * 技术栈球形图标云 - 3D 球体排列 + 真实图标
 * 使用 Simple Icons / Devicon CDN
 */
const CDN_SI = 'https://cdn.simpleicons.org';
const CDN_DEV = 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons';

const techList: { name: string; icon: string; cdn: 'si' | 'dev' }[] = [
  { name: 'Python', icon: 'python', cdn: 'si' },
  { name: 'SQL', icon: 'postgresql', cdn: 'si' },
  { name: 'Java', icon: 'java', cdn: 'si' },
  { name: 'JavaScript', icon: 'javascript', cdn: 'si' },
  { name: 'Pandas', icon: 'pandas', cdn: 'si' },
  { name: 'NumPy', icon: 'numpy', cdn: 'si' },
  { name: 'scikit-learn', icon: 'scikitlearn', cdn: 'si' },
  { name: 'ARIMA', icon: 'graphql', cdn: 'si' },
  { name: 'Prophet', icon: 'meta', cdn: 'si' },
  { name: 'Random Forest', icon: 'tensorflow', cdn: 'si' },
  { name: 'Gradient Boosting', icon: 'pytorch', cdn: 'si' },
  { name: 'SVR', icon: 'scikitlearn', cdn: 'si' },
  { name: 'MLP', icon: 'pytorch', cdn: 'si' },
  { name: 'LSTM', icon: 'pytorch', cdn: 'si' },
  { name: 'PostgreSQL', icon: 'postgresql', cdn: 'si' },
  { name: 'MySQL', icon: 'mysql', cdn: 'si' },
  { name: 'Selenium', icon: 'selenium', cdn: 'si' },
  { name: 'Streamlit', icon: 'streamlit', cdn: 'si' },
  { name: 'Power BI', icon: 'powerbi', cdn: 'si' },
  { name: 'Tableau', icon: 'tableau', cdn: 'si' },
  { name: 'Excel', icon: 'microsoftexcel', cdn: 'si' },
  { name: 'Git', icon: 'git', cdn: 'si' },
  { name: 'Maven', icon: 'apachemaven', cdn: 'si' },
  { name: 'Three.js', icon: 'threedotjs', cdn: 'si' },
  { name: 'REST APIs', icon: 'swagger', cdn: 'si' },
  { name: 'K-means', icon: 'scikitlearn', cdn: 'si' },
  { name: 'RFM', icon: 'pandas', cdn: 'si' },
];

// 球面均匀分布：3 圈 × 9 个
function spherePositions(n: number): { theta: number; phi: number }[] {
  const out: { theta: number; phi: number }[] = [];
  const rings = 3;
  const perRing = Math.ceil(n / rings);
  for (let r = 0; r < rings; r++) {
    const phi = 30 + (r * 60);
    for (let i = 0; i < perRing && out.length < n; i++) {
      const theta = (i / perRing) * 360;
      out.push({ theta, phi });
    }
  }
  return out;
}

const positions = spherePositions(techList.length);
---
<div class="icon-cloud">
  <div class="tech-sphere" aria-label="技术栈">
    {techList.map((t, i) => {
      const pos = positions[i];
      const iconUrl = t.cdn === 'si' ? `${CDN_SI}/${t.icon}` : `${CDN_DEV}/${t.icon}/${t.icon}-original.svg`;
      return (
        <div
          class="tech-sphere-item"
          style={`--theta: ${pos.theta}deg; --phi: ${pos.phi}deg; --i: ${i}`}
          title={t.name}
        >
          <img src={iconUrl} alt={t.name} width="28" height="28" loading="lazy" />
        </div>
      );
    })}
  </div>
</div>

<style>
  .icon-cloud {
    position: relative;
    overflow: hidden;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--glass-border);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 160px;
  }
  .tech-sphere {
    position: relative;
    width: 140px;
    height: 140px;
    perspective: 420px;
    transform-style: preserve-3d;
    animation: sphere-rotate 24s linear infinite;
  }
  @keyframes sphere-rotate {
    from { transform: rotateY(0deg) rotateX(-8deg); }
    to { transform: rotateY(360deg) rotateX(-8deg); }
  }
  .tech-sphere-item {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 28px;
    height: 28px;
    margin-left: -14px;
    margin-top: -14px;
    transform-style: preserve-3d;
    transform: rotateY(var(--theta)) rotateX(calc(-1 * var(--phi))) translateZ(58px);
    display: flex;
    align-items: center;
    justify-content: center;
    animation: sphere-float 8s ease-in-out infinite;
    animation-delay: calc(var(--i) * -0.12s);
  }
  .tech-sphere-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.05);
    padding: 3px;
    box-sizing: border-box;
    transition: transform 0.2s, filter 0.2s;
  }
  .tech-sphere-item:hover {
    z-index: 10;
  }
  .tech-sphere-item:hover img {
    transform: scale(1.25);
    filter: drop-shadow(0 4px 8px rgba(88, 166, 255, 0.4));
  }
  @keyframes sphere-float {
    0%, 100% { transform: rotateY(var(--theta)) rotateX(calc(-1 * var(--phi))) translateZ(58px) scale(1); }
    50% { transform: rotateY(var(--theta)) rotateX(calc(-1 * var(--phi))) translateZ(62px) scale(1.05); }
  }
</style>
