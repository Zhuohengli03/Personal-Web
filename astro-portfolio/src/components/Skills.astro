---
const skills = {
  'Programming & Data': ['Python', 'SQL', 'Pandas', 'NumPy', 'scikit-learn', 'Git'],
  'Data Engineering': ['ETL', 'API integration', 'PostgreSQL', 'MySQL', 'batch processing'],
  'Analytics & BI': ['Tableau', 'Power BI', 'Excel', 'KPI design', 'visualization'],
};
---
<section class="skills" aria-labelledby="skills-heading">
  <h2 id="skills-heading" class="section-title">Skills</h2>
  <div class="skills-grid">
    {Object.entries(skills).map(([category, items]) => (
      <div class="skill-group">
        <h3 class="skill-cat">{category}</h3>
        <ul class="skill-list">
          {items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem;
    color: var(--text);
  }
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.25rem;
  }
  .skill-group {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem;
  }
  .skill-cat {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--muted);
    margin: 0 0 0.5rem;
  }
  .skill-list {
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.9rem;
  }
  .skill-list li {
    padding: 0.15rem 0;
  }
</style>
